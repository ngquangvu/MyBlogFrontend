---
import { Icon } from "astro-icon";
import type { CustomerItem } from "~/types";

export interface Props {
    items: Array<CustomerItem>;
    title: string;
}

const { items, title } = Astro.props;
---

<div class="w-full max-w-6xl space-y-2">
    <div
        class="relative rounded-lg border border-default bg-gray-50 px-6 pb-6 pt-8"
    >
        <ul class="grid grid-cols-2 gap-8 sm:grid-cols-3 md:grid-cols-6">
            {
                items.map((item) => (
                    <li class="flex justify-center">
                        <Icon class="h-20" name={item.icon} />
                        <span class="hidden">{item.title}</span>
                    </li>
                ))
            }
        </ul>
    </div>
</div>
