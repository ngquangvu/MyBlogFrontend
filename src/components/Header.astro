---
import i18next, { t } from "i18next";
import HeaderLink from "./Header/HeaderLink.astro";
import type { NavItem } from "~/types";
import { Icon } from "astro-icon";
import HeaderMenu from "./Header/HeaderMenu.astro";
import { log } from "astro/dist/core/logger/core";
import HeaderLanguageSelect from "./Header/HeaderLanguageSelect.astro";

const NOTION_URL = await import.meta.env.NOTION_URL;
const links: Array<NavItem> = [
  {
    title: t(`header.blog`),
    url: "/",
  },
  {
    title: t(`header.notion`),
    url: "https://ngquangvu.notion.site/e7eed0bfbb5c47b7a6b829a0907b1df5?v=baac0c7edb1f44d382d0354239a3a5b5&pvs=4",
  },
  {
    title: t(`header.contact`),
    url: "#contact",
  },
  {
    title: t(`header.about`),
    url: "#about",
  },
];

const lang = i18next.language;
---

<header class="">
  <!-- PC -->
  <div
    class="absolute z-10 bottom-0 w-full hidden md:flex justify-between py-5 px-5 md:px-9"
  >
    <HeaderLanguageSelect lang={lang} />

    <nav class="flex gap-6 md:gap-8">
      {
        links.map((link) => (
          <HeaderLink
            class={
              "text-lg self-center text-white hover:animate-pulse hover:opacity-80"
            }
            href={link.url}
          >
            {link.title}
          </HeaderLink>
        ))
      }
    </nav>
  </div>

  <!-- SP -->
  <div class="fixed z-30 top-0 block md:hidden">
    <HeaderMenu navLinks={links} />
  </div>
</header>
