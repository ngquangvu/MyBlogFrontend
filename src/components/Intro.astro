---
import { t } from "i18next";
import { Icon } from "astro-icon";
import ContentSection from "~/components/ContentSection.astro";
const NOTION_URL = await import.meta.env.NOTION_URL;
const { workedYear } = Astro.props;
---

<ContentSection title={t(`intro.title`)} id="about">
  <Fragment slot="lead" set:html={t(`intro.content`)} />
  <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
    <a
      href="/"
      class="flex items-center justify-center gap-3 border-2 border-current px-6 py-4"
    >
      <Icon name="simple-icons:blogger" class="h-8 text-gray-800" />
      <span>{t(`intro.read blog`)}</span>
    </a>
    <a
      href={"https://ngquangvu.notion.site/e7eed0bfbb5c47b7a6b829a0907b1df5?v=baac0c7edb1f44d382d0354239a3a5b5&pvs=4"}
      target="_blank"
      class="flex items-center justify-center gap-3 border-2 border-current px-6 py-4"
    >
      <Icon name="simple-icons:notion" class="h-8 text-gray-800" />
      <span>{t(`intro.read notion`)}</span>
    </a>
  </div>
</ContentSection>
