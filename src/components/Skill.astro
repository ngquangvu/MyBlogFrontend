---
import { t } from "i18next";
import { Icon } from "astro-icon";
import ContentSection from "~/components/ContentSection.astro";
import type { FeatureItem } from "~/types";
const { workedYear } = Astro.props;

const skills: Array<FeatureItem> = [
  {
    title: t(`skill.1 title`),
    description: t(`skill.1 content`),
    icon: "clarity:command-line",
  },
  {
    title: t(`skill.2 title`),
    description: t(`skill.2 content`),
    icon: "clarity:command-outline-badged",
  },
  {
    title: t(`skill.3 title`),
    description: t(`skill.3 content`),
    icon: "unity",
  },
  {
    title: t(`skill.4 title`),
    description: t(`skill.4 content`),
    icon: "leader",
  },
  {
    title: t(`skill.5 title`),
    description: t(`skill.5 content`),
    icon: "cil:language",
  },
  {
    title: t(`skill.6 title`),
    description: t(`skill.6 content`),
    icon: "ri:empathize-line",
  },
  {
    title: t(`skill.7 title`),
    description: t(`skill.7 content`),
    icon: "mdi:account-group",
  },
];
---

<ContentSection title={t(`skill.title`)} id="skills">
  <Fragment slot="lead" set:html={t(`skill.content`)} />
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {
      skills.map(({ title, description, icon }) => (
        <li class="flex flex-col items-center gap-4 border border-default bg-gray-50 p-6 -mt-[1px] -ml-[1px]">
          <div class="h-16 w-16 rounded-full border-2 border-current p-3">
            <Icon name={icon} />
          </div>
          <p class="text-center font-extrabold text-xl">{title}</p>
          <p class="text-center text-offset text-sm">{description}</p>
        </li>
      ))
    }
  </ul>
</ContentSection>
