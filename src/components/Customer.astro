---
import type { CustomerItem } from "~/types";
import ContentSection from "./ContentSection.astro";
import CustomerList from "./CustomerList.astro";

const frameworks: Array<CustomerItem> = [
    {
        title: "React",
        icon: "frameworks/react",
    },
    {
        title: "Preact",
        icon: "frameworks/preact",
    },
    {
        title: "Svelte",
        icon: "frameworks/svelte",
    },
    {
        title: "Vue",
        icon: "frameworks/vue",
    },
    {
        title: "Solid",
        icon: "frameworks/solid",
    },
    {
        title: "Lit",
        icon: "frameworks/lit",
    },
];
---

<ContentSection title="Usable" id="usable">
    <Fragment slot="lead">
        Astro <span class="text-primary">plays nice</span>. Bring your own UI{
            " "
        }
        <span class="text-primary">framework</span>
        and deploy to your favorite <span class="text-primary">platform</span>.
    </Fragment>
    <CustomerList items={frameworks} title="Customers" />
</ContentSection>
